.body
  = render partial: 'shared/header'

  .search_box
    = form_with(url: search_posts_path, local:true, method: :get, class: "search_form") do |form|
      = form.text_field :keyword, placeholder: "キーワードを入力してください", class: "search_input"
      = form.submit "検索", class: "search_btn" 

  .main_content
    - @posts. each do |post|
      = render partial: "post", locals: {post: post} 

  .p-top__paginate= paginate @posts



