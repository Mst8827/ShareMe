.body
  .header 
    .header__bar
      %h.title ShareMe
      - if user_signed_in?
        .user_nav
          = link_to "/users/#{current_user.id}", class: 'current_user_name' do
            = current_user.nickname

          -# = link_to users_current_user_id_path, class: 'mypage_btn' do
          -#   = icon('fas', 'fa-user-circle')

          = link_to "Logout", destroy_user_session_path, method: :delete, class: "logput_btn"
          = link_to new_post_path, class: 'post_btn' do
            = icon('fas', 'edit', class: 'edit_btn')
      - else
        .user_nav
          = link_to "Login", new_user_session_path, method: :get, class: 'login_btn'
          = link_to "Sign up", new_user_registration_path, method: :get, class: "registration_btn"

  .search_box
    = form_with(url: search_posts_path, local:true, method: :get, class: "search_form") do |form|
      = form.text_field :keyword, placeholder: "Search", class: "search_input"
      = form.submit "Search", class: "search_btn" 

  .main_content
    - @posts. each do |post|
      = render partial: "post", locals: {post: post}   
