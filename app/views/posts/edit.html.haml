.header 
  .header__bar
    = link_to root_path do
      %h.title ShareMe
    .NewPost Edit

.contents_row
  .container
    = form_with(model: @post, local: true) do |form|
      %h3
        Edit Page
      = form.text_field :image, placeholder: "Image Url", class: :form_image
      = form.text_area :text, placeholder: "text" , rows: "10", class: :form_text
      = form.submit "Update", class: :form_btn 
