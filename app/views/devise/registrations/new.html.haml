.content-box
  .top-navi-box
    = link_to root_path do
      %h2.title ShareMe
    %h2.index Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource

    .field  
      = f.label :nickname
      %em (8 characters maximum)
      %br/
      = f.text_field :nickname, autofocus: true, class: "sign-up-nickname"
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "sign-up-email"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "sign-up-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "sign-up-password"
    .actions
      = f.submit "Sign up", class: "sign-up-btn"
  = render "devise/shared/links"
